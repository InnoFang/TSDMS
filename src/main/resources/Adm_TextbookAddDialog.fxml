<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F3E5F5;"
            xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.controller.AdmTextbookAddDialogController">
    <children>
        <JFXTextField fx:id="noInput" labelFloat="true" layoutX="30.0" layoutY="82.0" prefHeight="30.0"
                      prefWidth="260.0" promptText="教材编号">
            <font>
                <Font name="Microsoft YaHei UI Light" size="15.0"/>
            </font>
        </JFXTextField>
        <JFXTextField fx:id="nameInput" labelFloat="true" layoutX="30.0" layoutY="145.0" prefHeight="30.0"
                      prefWidth="260.0" promptText="教材名称">
            <font>
                <Font name="Microsoft YaHei UI Light" size="15.0"/>
            </font>
        </JFXTextField>
        <JFXTextField fx:id="versionInput" labelFloat="true" layoutX="30.0" layoutY="207.0" prefHeight="30.0"
                      prefWidth="260.0" promptText="版本">
            <font>
                <Font name="Microsoft YaHei UI Light" size="15.0"/>
            </font>
        </JFXTextField>
        <JFXTextField fx:id="priceInput" labelFloat="true" layoutX="310.0" layoutY="82.0" prefHeight="30.0"
                      prefWidth="260.0" promptText="单价">
            <font>
                <Font name="Microsoft YaHei UI Light" size="15.0"/>
            </font>
        </JFXTextField>
        <JFXTextField fx:id="storeInput" labelFloat="true" layoutX="310.0" layoutY="145.0" prefHeight="30.0"
                      prefWidth="260.0" promptText="入库数量">
            <font>
                <Font name="Microsoft YaHei UI Light" size="15.0"/>
            </font>
        </JFXTextField>
        <JFXTextField fx:id="pressInput" labelFloat="true" layoutX="310.0" layoutY="207.0" prefHeight="30.0"
                      prefWidth="260.0" promptText="出版社">
            <font>
                <Font name="Microsoft YaHei UI Light" size="15.0"/>
            </font>
        </JFXTextField>
        <JFXButton fx:id="okButton" buttonType="RAISED" layoutX="139.0" layoutY="318.0" onAction="#onHandleOk"
                   prefHeight="30.0" prefWidth="96.0" style="-fx-background-color: #9FA8DA;" text="确认"
                   textFill="WHITE"/>
        <JFXButton fx:id="resetButton" buttonType="RAISED" layoutX="250.0" layoutY="318.0" onAction="#onHandleReset"
                   prefHeight="30.0" prefWidth="96.0" style="-fx-background-color: #4DB6AC;" text="重置"
                   textAlignment="CENTER" textFill="WHITE"/>
        <JFXButton fx:id="cancelButton" buttonType="RAISED" layoutX="365.0" layoutY="318.0" onAction="#onHandleCancel"
                   prefHeight="30.0" prefWidth="96.0" style="-fx-background-color: #81C784;" text="取消"
                   textAlignment="CENTER" textFill="WHITE"/>
        <Label fx:id="errorMessage" alignment="CENTER" layoutX="138.0" layoutY="366.0" prefHeight="20.0"
               prefWidth="324.0"
               text="Label"/>
    </children>
</AnchorPane>
